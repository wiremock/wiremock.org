---
import { Icon } from '@astrojs/starlight/components';

interface Props {
	icon?: string;
	title: string;
}

const { icon, title } = Astro.props;
---

<article class="cloud-callout sl-flex">
	<p class="title sl-flex">
		{icon && <Icon name={icon} class="icon" size="1.333em" />}
		<span set:html={title} />
	</p>
	<div class="body"><slot /></div>
</article>

<style>
	@layer starlight.components {
		.cloud-callout {
			background-color: #ff98000a;
			border: 1px solid var(--sl-color-gray-5);
			padding: clamp(1rem, calc(0.125rem + 3vw), 1rem);
			flex-direction: column;
			gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
			border-radius: 0.5rem;
		}
		.title {
			font-weight: 600;
			font-size: var(--sl-text-h4);
			color: var(--sl-color-white);
			line-height: var(--sl-line-height-headings);
			gap: 1rem;
			align-items: center;
		}
		.cloud-callout .icon {
			border: 1px solid var(--sl-color-orange);
			background-color: var(--sl-color-orange-low);
			padding: 0.2em;
			border-radius: 0.25rem;
			flex-shrink: 0;
		}
		.cloud-callout .body {
			margin: 0;
			font-size: clamp(var(--sl-text-sm), calc(0.5rem + 1vw), var(--sl-text-body));
		}
	}
</style>
